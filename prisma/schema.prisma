model Experience {
  id              Int      @id @default(autoincrement())
  slug            String  @unique
  title           String
  summary         String?
  details         String?
  discountPercent Int?
  coupons         String? // JSON string or array, ajustar si es necesario
  intro           String?
  highlights      String? // JSON string or array, ajustar si es necesario
  bullets         String? // JSON string or array, ajustar si es necesario
  outcomes        String? // JSON string or array, ajustar si es necesario
  images          String? // JSON string or array, ajustar si es necesario
  icon            String?
  price           Float?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
model ElementCategory {
  id          Int    @id @default(autoincrement())
  title       String @unique
  description String?
}
model DownloadAccess {
  id       Int    @id @default(autoincrement())
  fileSlug String
  email    String?
  name     String?
  orderId  Int?
  order    Order? @relation(fields: [orderId], references: [id])
}
